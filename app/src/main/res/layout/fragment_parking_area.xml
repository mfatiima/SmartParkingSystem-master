<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ehsan.safeparking.ParkingArea">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/nu_logo" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="National University"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Of Computer and Emerging Sciences"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="#eee83b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFE8E8E8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#eee83b"
                android:layoutDirection="inherit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ListView
                android:id="@+id/First_parking_Row"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:divider="@android:color/holo_green_light"
                android:dividerHeight="0dp"></ListView>

            <ListView
                android:id="@+id/Second_parking_Row"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:divider="@android:color/holo_green_light"
                android:dividerHeight="0dp"></ListView>

            <ListView
                android:id="@+id/Third_parking_Row"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:divider="@android:color/holo_green_light"
                android:dividerHeight="0dp"></ListView>

            <ListView
                android:id="@+id/Fourth_parking_Row"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:divider="@android:color/holo_green_light"
                android:dividerHeight="0dp"></ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
